# .bash_profile

# Get the aliases and functions
if [ -f ~/.bashrc ]; then
	. ~/.bashrc
fi

# User specific environment and startup programs

# export PS1="[\u@\h \W]\$" # original
#export PS1="\e[0;34m\e[47m\u@\h \w> \e[m "
if [ -n $TERM ]
then
    SGL=${SINGULARITY_CONTAINER/.img}
    SGL=${SGL:+-vm-}${SGL}
    export PS1="\[$(tty -s && tput setaf 0)\]\[$(tty -s && tput setab 2)\]\u@\h${SGL} \w>\[$(tty -s && tput sgr0)\] "
else
    export PS1="[\u@\h \W]\$ " # original
fi

if [ -n $SINGULARITY_CONTAINER ]
then
    HISTFILE=~/.bash_history_vm
fi

CUDA_ROOT_DIR="/usr/local/cuda-8.0"
export CUDA_ROOT_DIR

ulimit -u 10000
set -o ignoreeof

PATH=$PATH:$HOME/.local/bin:$HOME/bin:$HOME/opt/eclipse/java-neon/eclipse:$CUDA_ROOT_DIR/bin

export PATH

LD_LIBRARY_PATH="${LD_LIBRARY_PATH}:${CUDA_ROOT_DIR}/lib64/"
export LD_LIBRARY_PATH

